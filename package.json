{
  "name": "ts-playground",
  "version": "0.0.3",
  "description": "TypeScript Playground",
  "main": "dist/index.js",
  "scripts": {
    "clear": "rimraf ./node_modules ./dist ./coverage ./package-lock.json",
    "start": "ts-node ./src/index.ts",
    "prebuild": "tslint --project ./",
    "build": "ncc build src/index.ts -m -o ./dist",
    "test": "jest",
    "watch": "tsc -w -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregoranders/ts-playground.git"
  },
  "keywords": [
    "jest",
    "typescript"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageReporters": [
      "lcovonly",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "/src/.*\\.spec\\.ts$"
  },
  "author": "Gregor Anders <gregor.anders@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregoranders/ts-playground/issues"
  },
  "homepage": "https://gregoranders.github.io/ts-playground/",
  "dependencies": {
    "@actions/core": "1.2.3",
    "@actions/github": "2.1.1"
  },
  "devDependencies": {
    "@types/jest": "25.1.4",
    "@zeit/ncc": "0.22.0",
    "jest": "25.2.3",
    "rimraf": "3.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.8.1",
    "tslint": "6.1.0",
    "typescript": "3.8.3"
  }
}
