{
  "name": "ts-playground",
  "version": "0.0.8",
  "description": "TypeScript Playground",
  "main": "dist/index.js",
  "scripts": {
    "clear": "rimraf ./node_modules ./dist ./coverage ./package-lock.json",
    "start": "ts-node ./src/index.ts",
    "prebuild": "tsc --noEmit --project ./ && eslint ./src/**/*.ts --quiet --fix",
    "build": "ncc build src/index.ts -m -o ./dist",
    "test": "jest",
    "watch": "tsc -w -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregoranders/ts-playground.git"
  },
  "keywords": [
    "jest",
    "typescript"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit --project ./ && eslint ./src/**/*.ts --quiet && npm run test"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageReporters": [
      "lcovonly",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "/src/.*\\.spec\\.ts$"
  },
  "author": "Gregor Anders <gregor.anders@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregoranders/ts-playground/issues"
  },
  "homepage": "https://gregoranders.github.io/ts-playground/",
  "dependencies": {
    "@actions/core": "1.2.4",
    "@actions/github": "3.0.0"
  },
  "devDependencies": {
    "@types/jest": "25.2.3",
    "@typescript-eslint/eslint-plugin": "3.1.0",
    "@typescript-eslint/parser": "3.1.0",
    "@zeit/ncc": "0.22.3",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.1.0",
    "ts-node": "8.10.2",
    "typescript": "3.9.5"
  }
}
